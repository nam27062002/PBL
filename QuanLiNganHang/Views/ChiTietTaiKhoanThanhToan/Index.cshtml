    function ConvertToMoney(a) {
        var s = "";
        let i = 0;
        while (a != 0) {
            if (i % 3 == 0 && i != 0) {
                s = "," + s;
            }
            s = Math.floor(a % 10) + s;
            i++;
            a = Math.floor(a / 10);
        }
        s += " VND";
        return s;
    }
